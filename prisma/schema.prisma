generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  titulo    String
  descricao String
  data      DateTime
  location  String
  capacidade Int
  categoria String
  preco 
  criadaEm    DateTime @default(now())
  atualizadaEm DateTime @default(now()) @updatedAt
  

  @@map("tasks")
}